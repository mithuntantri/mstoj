<?xml version='1.0' encoding='utf-8'?>
<widget id="com.marutisuzuki.tojadmin" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DigiTouch Admin</name>
    <description>
        Maruti Suzuki Internal App
    </description>
    <author email="email@gmail.com" href="www.example.com">
        Mithun Tantri
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon density="hdpi" src="ic_launcher/res/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="ic_launcher/res/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="ic_launcher/res/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="ic_launcher/res/mipmap-xxxhdpi/ic_launcher.png" />
        <allow-intent href="market:*" />
        <feature name="Toast">
            <param name="android-package" value="nl.xservices.plugins.Toast" />
        </feature>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-x-toast" spec="^2.7.2" />
    <plugin name="cordova-plugin-otp-auto-verification" spec="^1.0.1" />
    <plugin name="cordova-plugin-CDVNavBar" spec="~2.5.0" />
    <plugin name="onesignal-cordova-plugin" spec="2.4.6" />
    <engine name="android" spec="~7.0.0" />
</widget>
